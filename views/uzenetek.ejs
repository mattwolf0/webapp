<!DOCTYPE html>
<html lang="hu">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Üzenetek – Rádióadók</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<%- include('partials/navbar', { activePage: 'uzenetek' }) %>

<%
  const isLoggedIn = !!currentUser;
  const isAdmin = isLoggedIn && currentUser.role === 'admin';
%>

<main class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">Beérkezett üzenetek</h1>
    <% if (!isAdmin) { %>
      <a href="<%= basePath %>/kapcsolat" class="btn btn-primary">
        Új üzenet küldése
      </a>
    <% } %>
  </div>

  <% if (!uzenetek || uzenetek.length === 0) { %>
    <div class="card shadow-sm">
      <div class="card-body text-muted">
        Még nincs beérkezett üzenet.
      </div>
    </div>
  <% } else { %>
    <div class="card shadow-sm">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-dark">
            <tr>
              <th>ID</th>
              <th>Küldő neve</th>
              <th>E-mail</th>
              <th>Tárgy</th>
              <th>Üzenet</th>
              <th>Dátum</th>
              <% if (isAdmin) { %>
                <th>Műveletek</th>
              <% } %>
            </tr>
            </thead>
            <tbody>
            <% uzenetek.forEach(function(u) { %>
              <tr>
                <td><%= u.id %></td>
                <td><%= u.kuldoNev %></td>
                <td><%= u.kuldoEmail %></td>
                <td><%= u.targy %></td>
                <td><%= u.szoveg %></td>
                <td><%= u.letrehozva %></td>
                <% if (isAdmin) { %>
                  <td>
                    <a href="<%= basePath %>/admin/uzenetek/<%= u.id %>/valasz"
                       class="btn btn-sm btn-outline-secondary">
                      Válasz
                    </a>
                  </td>
                <% } %>
              </tr>
            <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% } %>
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
