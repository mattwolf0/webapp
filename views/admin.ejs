<!DOCTYPE html>
<html lang="hu">
<head>
  <meta charset="UTF-8">
  <title>Admin – Rádióadók</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
        rel="stylesheet">
</head>
<body>

<%- include('partials/navbar', { activePage: 'admin' }) %>

<main class="container my-5">

  <div class="mb-4">
    <h1 class="h2 mb-1">Admin felület</h1>
    <p class="text-muted mb-0">
      Áttekintés a rendszerben tárolt adókról, felhasználókról és üzenetekről.
    </p>
  </div>

  <div class="row g-3 mb-4">
    <div class="col-md-4">
      <div class="card shadow-sm h-100">
        <div class="card-body">
          <h5 class="card-title">Regisztrált felhasználók</h5>
          <p class="display-6 mb-0"><%= userCount || 0 %></p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card shadow-sm h-100">
        <div class="card-body">
          <h5 class="card-title">Beérkezett üzenetek</h5>
          <p class="display-6 mb-0"><%= uzenetCount || 0 %></p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card shadow-sm h-100">
        <div class="card-body">
          <h5 class="card-title">Rádióadók az adatbázisban</h5>
          <p class="display-6 mb-0"><%= adoCount || 0 %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <h2 class="h5 mb-3">Összes üzenet</h2>

      <% const hasUzenetek = Array.isArray(uzenetek) && uzenetek.length > 0; %>

      <% if (hasUzenetek) { %>
        <div class="table-responsive">
          <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-dark">
            <tr>
              <th>ID</th>
              <th>Küldő név</th>
              <th>E-mail</th>
              <th>Tárgy</th>
              <th>Üzenet</th>
              <th>Dátum</th>
              <th>Típus</th>
            </tr>
            </thead>
            <tbody>
            <% uzenetek.forEach(function(uzenet) { %>
              <tr>
                <td><%= uzenet.id %></td>
                <td><%= uzenet.kuldoNev %></td>
                <td><%= uzenet.kuldoEmail %></td>
                <td><%= uzenet.targy %></td>
                <td><%= uzenet.szoveg %></td>
                <td><%= uzenet.letrehozva %></td>
                <td>
                  <%= uzenet.adminValasz ? 'Admin válasz' : 'Felhasználói üzenet' %>
                </td>
              </tr>
            <% }); %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <p class="text-muted mb-0">
          Még nincs egyetlen üzenet sem.
        </p>
      <% } %>
    </div>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <h2 class="h5 mb-3">Regisztrált felhasználók</h2>

      <% const hasUsers = Array.isArray(users) && users.length > 0; %>

      <% if (hasUsers) { %>
        <div class="table-responsive">
          <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-dark">
            <tr>
              <th>ID</th>
              <th>Felhasználónév</th>
              <th>E-mail</th>
              <th>Szerepkör</th>
            </tr>
            </thead>
            <tbody>
            <% users.forEach(function(user) { %>
              <tr>
                <td><%= user.id %></td>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td><%= user.role %></td>
              </tr>
            <% }); %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <p class="text-muted mb-0">
          Még nincs regisztrált felhasználó.
        </p>
      <% } %>
    </div>
  </div>

</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
