<!DOCTYPE html>
<html lang="hu">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Üzenet válasz</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<%- include('partials/navbar', { activePage: 'admin' }) %>

<main class="container my-5">
  <h1 class="h3 mb-4">Válasz üzenetre</h1>

  <% if (eredeti) { %>
    <div class="mb-3">
      <h5>Eredeti üzenet</h5>
      <p>
        <strong><%= eredeti.kuldoNev %></strong>
        &lt;<span><%= eredeti.kuldoEmail %></span>&gt;
      </p>
      <p><%= eredeti.letrehozva %></p>
      <p class="border p-2"><%= eredeti.szoveg %></p>
    </div>
  <% } %>

  <% if (hiba) { %>
    <div class="alert alert-danger"><%= hiba %></div>
  <% } %>

  <form action="/admin/uzenetek/<%= eredeti ? eredeti.id : '' %>/valasz"
        method="post">

    <div class="mb-3">
      <label class="form-label">Válasz szövege</label>
      <textarea class="form-control" rows="4"
                name="szoveg" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Válasz küldése</button>
    <a href="/uzenetek" class="btn btn-secondary ms-2">Mégse</a>
  </form>
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
