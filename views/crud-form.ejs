<!DOCTYPE html>
<html lang="hu">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= ado ? 'Rádióadó szerkesztése' : 'Új rádióadó' %> – Rádióadók</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<%- include('partials/navbar', { activePage: 'crud' }) %>

<main class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card shadow-sm">
        <div class="card-body">
          <h1 class="h4 mb-4">
            <%= ado ? 'Rádióadó szerkesztése' : 'Új rádióadó felvétele' %>
          </h1>

          <% if (hiba) { %>
            <div class="alert alert-danger"><%= hiba %></div>
          <% } %>

          <form action="save" method="post">
            <% if (ado) { %>
              <input type="hidden" name="id" value="<%= ado.id %>">
            <% } %>

            <div class="mb-3">
              <label class="form-label">Frekvencia (MHz)</label>
              <input type="text" name="frekvencia" class="form-control"
                     value="<%= ado && ado.frekvencia != null ? ado.frekvencia : '' %>" required>
            </div>

            <div class="mb-3">
              <label class="form-label">Teljesítmény (kW)</label>
              <input type="text" name="teljesitmeny" class="form-control"
                     value="<%= ado && ado.teljesitmeny != null ? ado.teljesitmeny : '' %>" required>
            </div>

            <div class="mb-3">
              <label class="form-label">Csatorna</label>
              <input type="text" name="csatorna" class="form-control"
                     value="<%= ado && ado.csatorna ? ado.csatorna : '' %>" required>
            </div>

            <div class="mb-3">
              <label class="form-label">Adóhely / cím</label>
              <input type="text" name="cim" class="form-control"
                     value="<%= ado && ado.cim ? ado.cim : '' %>" required>
            </div>

            <div class="mb-3">
              <label class="form-label">Település</label>
              <select name="telepulesId" class="form-select" required>
                <option value="">Válassz települést...</option>
                <% if (Array.isArray(telepulesek)) { %>
                  <% telepulesek.forEach(function(t) { %>
                    <option value="<%= t.id %>"
                      <%= ado && ado.telepulesId === t.id ? 'selected' : '' %>>
                      <%= t.nev %> (<%= t.megyeNev %>)
                    </option>
                  <% }) %>
                <% } %>
              </select>
            </div>

            <div class="d-flex justify-content-between">
              <a href="." class="btn btn-outline-secondary">
                Mégse
              </a>
              <button type="submit" class="btn btn-primary">
                Mentés
              </button>
            </div>
          </form>

        </div>
      </div>
    </div>
  </div>
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
