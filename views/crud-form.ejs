<!DOCTYPE html>
<html lang="hu">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Rádióadó űrlap – Rádióadók</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<%- include('partials/navbar', { activePage: 'crud' }) %>

<main class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card shadow-sm">
        <div class="card-body">
          <h1 class="h3 mb-4">
            <%= ado && ado.id ? 'Rádióadó szerkesztése' : 'Új rádióadó hozzáadása' %>
          </h1>

          <% if (hiba) { %>
            <div class="alert alert-danger"><%= hiba %></div>
          <% } %>

          <form action="/crud/save" method="post">
            <input type="hidden" name="id" value="<%= ado && ado.id ? ado.id : '' %>">

            <div class="mb-3">
              <label class="form-label">Frekvencia (MHz)</label>
              <input type="number" step="0.1" min="0"
                     class="form-control"
                     name="frekvencia"
                     value="<%= ado && ado.frekvencia != null ? ado.frekvencia : '' %>"
                     required>
            </div>

            <div class="mb-3">
              <label class="form-label">Teljesítmény (kW)</label>
              <input type="number" step="0.01" min="0"
                     class="form-control"
                     name="teljesitmeny"
                     value="<%= ado && ado.teljesitmeny != null ? ado.teljesitmeny : '' %>"
                     required>
            </div>

            <div class="mb-3">
              <label class="form-label">Csatorna</label>
              <input type="text" class="form-control"
                     name="csatorna"
                     value="<%= ado && ado.csatorna ? ado.csatorna : '' %>"
                     required>
            </div>

            <div class="mb-3">
              <label class="form-label">Adóhely / cím</label>
              <input type="text" class="form-control"
                     name="cim"
                     value="<%= ado && ado.cim ? ado.cim : '' %>"
                     required>
            </div>

            <div class="mb-3">
              <label class="form-label">Település</label>
              <select class="form-select" name="telepulesId" required>
                <option value="" disabled <%= !(ado && ado.telepules) ? 'selected' : '' %>>
                  Válassz települést...
                </option>

                <% if (Array.isArray(telepulesek)) { %>
                  <% telepulesek.forEach(function(t) { %>
                    <option value="<%= t.id %>"
                      <%= (ado && (
                            ado.telepulesId === t.id ||
                            (ado.telepules && ado.telepules.id === t.id)
                          )) ? 'selected' : '' %>>
                      <%= t.nev %>
                    </option>
                  <% }); %>
                <% } %>
              </select>
            </div>

            <div class="d-flex gap-2 justify-content-end">
              <a href="/crud" class="btn btn-outline-secondary">Mégse</a>
              <button type="submit" class="btn btn-primary">Mentés</button>
            </div>

          </form>
        </div>
      </div>
    </div>
  </div>
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
